<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_weight="1">

        <TextView
            android:id="@+id/networkNameTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:text="Network Name"
            android:textSize="18sp"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/networkStrengthTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:text="Signal Strength"
            android:textSize="14sp"/>

        <TextView
            android:id="@+id/networkCapabilitiesTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:text="Capabilities"
            android:textSize="14sp"/>

    </LinearLayout>

    <ImageView
        android:id="@+id/lockImageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:src="@drawable/baseline_lock_24"
        android:layout_gravity="center_vertical"/>

</LinearLayout>
